    function getcity() {
        var prov=$("#province").val();
        var cit = "<option value=''>城市</option>";
        $.post('http://mx6gc.zznissan.com.cn/Api/getCity/?t=' + Math.random(),
            {
                prov: prov
            },
            function (data) {               
                data = JSON.parse(data);
                for (i = 0; i < data.length; i++) {
                    cit += "<option value='" + data[i]["id"] + "'>" + data[i]["categoryname"] + "</option>";
                }
                $('#city').empty().append(cit);
            });
        }
        function getdealer() {           
            var provid = $('#province').val();
            var cityid = $('#city').val();            
            var cit = "<option value=''>经销商</option>";
            $.post('http://mx6gc.zznissan.com.cn/Api/getJxsByPC/?t=' + Math.random(),
            {
                provid: provid,
                cityid: cityid
            },
            function (data) {
                //alert(data);
                data = JSON.parse(data);                
                for (i = 0; i < data.length; i++) {
                    cit += "<option value='" + data[i]["jxs_user_id"] + "'>" + data[i]["jxs_comname"] + "</option>";
                }
                $('#dealer').empty().append(cit); 
            });
        }

        function _alert(txt){
        	document.getElementById('submitinf').innerHTML=txt;
        }

        var isOK = true;
        $(".p4_submit").bind("tap", function () {
            var name = $("#name").val();
            var sex = $("#sex").val();
            var mobile = $("#mobile").val();

            var provinceid = $("#province").val();
            var obj = document.getElementById('province');
            var index = obj.selectedIndex;
            var province = obj.options[index].text;

            var cityid = $("#city").val();
            var objc = document.getElementById('city');
            index = objc.selectedIndex;
            var city = objc.options[index].text;

            var loveid = $("#love").val();

            var objl = document.getElementById('love');
            index = objl.selectedIndex;
            var love = objl.options[index].text;
            

            var address = $("#address").val();
            var dealerid = $("#dealer").val();

            var objd = document.getElementById('dealer');
            index = objd.selectedIndex;
            var dealer = objd.options[index].text;

            var strchecked = $("#checked").val();

            if ($.trim(name) == "") {
                _alert("请填写您的姓名");
                isOK = true;
                return;
            }
            regex = /^([a-zA-Z\u4e00-\u9fa5]){2,20}$/gi;
            if (!regex.test(name)) {
                _alert("姓名格式不正确");
                isOK = true;
                return;
            }
            if ($.trim(mobile) == "") {
                _alert("手机号不能为空");
                isOK = true;
                return;
            }
            regex = /^1\d{10}$/gi;
            if (!regex.test(mobile)) {
                _alert("手机号格式不对");
                isOK = true;
                return;
            }
            if ($.trim(sex) == "") {
                _alert("请选择您的性别");
                isOK = true;
                return;
            }
            if (province == "") {
                _alert("请选择省份");
                isOK = true;
                return;
            }
            if (city == "") {
                _alert("请选择城市");
                isOK = true;
                return;
            }
            if (address == "") {
                _alert("请输入具体街道地址");
                isOK = true;
                return;
            }
            if (love == "") {
                _alert("请选择车型");
                isOK = true;
                return;
            }
            if (isOK) {
                isOK = false;
                $.post('Ajax.aspx?action=UserInfo&t=' + Math.random(),
                {
                    name: name,
                    sex: sex,
                    mobile: mobile,
                    province: province,
                    provinceid: provinceid,
                    cityid: cityid,
                    city: city,
                    dealerid: dealerid,
                    dealer: dealer,
                    love: love,
                    loveid:loveid,
                    strchecked: strchecked,
                    address: address,
                    src: src
                },
                function (data) {
                    isOK = true;
                    if ($.trim(data) == "提交成功!") {
                        _alert(data);
                        $("#name").val("");
                        $("#mobile").val("");
                        $("#province").val("");
                        $("#city").empty().append("<option value=''>城市</option>");
                        $("#dealer").empty().append("<option value=''>经销商</option>");
                        $("#address").val("");
                        $("#love").val("");
                    } else {
                        _alert(data);
                    }
                });
